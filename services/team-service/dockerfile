FROM golang:1.22 AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /out/team-service .

FROM gcr.io/distroless/static:nonroot
WORKDIR /
COPY --from=build /out/team-service /team-service
USER nonroot:nonroot
EXPOSE 8080
ENTRYPOINT ["/team-service"]
